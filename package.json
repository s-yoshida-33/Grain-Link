{
  "name": "grain-link",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Grain Link Application",
  "author": "Toei Techno International Inc.",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm:dev\" \"npm:electron:start\"",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "main": "electron/main.cjs",
  "build": {
    "appId": "com.tti.grain-link",
    "productName": "Grain Link",
    "copyright": "© 2026 Toei Techno International Inc.",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "GrainLinkSetup-${arch}-${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "shortcutName": "Grain Link",
      "deleteAppDataOnUninstall": false,
      "include": "build/installer.nsh",
      "warningsAsErrors": false,
      "runAfterFinish": true,
      "allowElevation": false,
      "perMachine": false,
      "language": "1041",
      "installerLanguages": [
        "ja_JP"
      ],
      "menuCategory": true,
      "uninstallDisplayName": "Grain Link アンインストール",
      "unicode": true,
      "differentialPackage": false
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@tailwindcss/vite": "^4.1.17",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.2.2",
    "wait-on": "^8.0.1"
  }
}
